{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "dmg/read-more",
	"version": "0.1.0",
	"title": "DMG Read More",
	"category": "widgets",
	"icon": "smiley",
	"description": "A Wordpress block that adds a Read More anchor tag to a page and allows a user to populate it with a specific post",
	"example": {},
	"supports": {
		"html": false
	},
    "attributes": {
        "selectedPost": {
            "type": "number",
            "default": 0
        }
    },
    "editorScript": "file:./build/read-more.js",
    "editorStyle": "file:./build/read-more.css",
    "style": "file:./build/style-read-more.css",
    "render": "file:./render.php"
}